<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.mcuhq.waterino">

    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />

    <permission android:name="android.permission.BLUETOOTH" android:label="BLUETOOTH" />
    <permission android:name="android.permission.BLUETOOTH_ADMIN" />

    <application
        android:name="com.mcuhq.waterino.MyApp"
        android:allowBackup="true"
        android:icon="@mipmap/goji_garden"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.mcuhq.waterino.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.mcuhq.waterino.ManualActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.DEFAULT" />
                <category android:name="com.mcuhq.waterino.ManualActivity" />
            </intent-filter>
        </activity>
        <activity android:name="com.mcuhq.waterino.GCodesActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.DEFAULT" />
                <category android:name="com.mcuhq.waterino.GCodesActivity" />
            </intent-filter>
        </activity>
        <activity android:name="com.mcuhq.waterino.ProgramEditorActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.DEFAULT" />
                <category android:name="com.mcuhq.waterino.ProgramEditorActivity" />
            </intent-filter>
        </activity>
    </application>

</manifest>